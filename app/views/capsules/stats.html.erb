<h1>Capsule Stats</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @capsules.exists? %>
    <% @capsules.each do |capsule| %>
      <tr>
        <td><%= capsule.name %></td>
        <td><%= link_to 'Show', capsule %></td>
        <td><%= capsule.wardrobe_items.count %></td>
      </tr>
        <% end %>
    <% else %>
     <h4>You have not created any capsules yet.</h4>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capsule', new_capsule_path %>
