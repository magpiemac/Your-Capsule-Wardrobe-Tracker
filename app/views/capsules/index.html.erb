<h1>Capsules</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @capsules.exists? %>
    <% @capsules.each do |capsule| %>
      <tr>
        <td><%= capsule.name %></td>
        <td><%= link_to 'Show', capsule %></td>
        <td><%= link_to 'Edit', edit_capsule_path(capsule) %></td>
        <td><%= link_to 'Destroy', capsule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% end %>
    <% else %>
     <h4>You have not created any capsules yet.</h4>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capsule', new_capsule_path %>
